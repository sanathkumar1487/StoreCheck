<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="8"
        android:columnCount="2"
        android:padding="20dp"
        android:weightSum="100"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <ImageView
            android:layout_row="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:src="@drawable/ic_manageoutlet_option"
            android:paddingTop="5dp"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Manage Outlet"
            android:id="@+id/manageOutlet"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"
            android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <ImageView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_viewdetails_option"
            android:paddingTop="5dp"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:text="View Details"
            android:id="@+id/viewDetails"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"
            android:textStyle="bold"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <ImageView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_addbrand_option"
            android:paddingTop="5dp"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:text="Add Brand"
            android:id="@+id/addBrand"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"
            android:textStyle="bold"
            />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <ImageView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_import_option"
            android:paddingTop="5dp"/>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_column="1"
            android:text="Import StoreChecker Data -2"
            android:id="@+id/importData"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/rectangle"
           />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
        <ImageView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_export_option"
            android:paddingTop="5dp"/>


        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_row="4"
            android:layout_column="1"
            android:text="Export StoreChecker Data -2"
            android:id="@+id/export"
            android:textColor="@color/white"
            android:background="@drawable/rectangle"
            android:textStyle="bold"

            />

        </LinearLayout>
         </LinearLayout>

</LinearLayout>