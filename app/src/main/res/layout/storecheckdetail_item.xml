<layout>
    <data>
        <variable
            name="storeCheckDetail"
            type="com.euromonitor.storecheck.model.StoreCheckDetail"/>
    </data>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp"
    android:layout_height="wrap_content"
    android:textSize="@dimen/detailfont_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100sp"
                android:maxWidth="100sp"
                android:maxLines="10"
                android:layout_marginRight="100sp"
                android:textColor="@color/grey_700"
                android:text="@{storeCheckDetail.brand}"/>
        </LinearLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rowCount="3"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="@dimen/detailfont_size"
                android:inputType="numberDecimal"
                android:textColor="@color/grey_500"
                android:layout_row="0"
                android:text="@{String.valueOf(storeCheckDetail.price)}"/>
            <TextView
                android:id="@+id/packSize"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="@dimen/detailfont_size"
                android:inputType="numberDecimal"
                android:textColor="@color/grey_500"
                android:layout_row="1"
                android:text="@{String.valueOf(storeCheckDetail.packSize)}"/>
            <TextView
                android:id="@+id/itemsPerPack"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="@dimen/detailfont_size"
                android:textColor="@color/grey_500"
                android:layout_row="2"
                android:text="@{String.valueOf(storeCheckDetail.multiPackSize)}"/>
        </GridLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</layout>