<layout  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/addOutlet_Drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/PopupTheme"
                android:theme="@style/ToolBarTheme"
                android:id="@+id/addOutletToolBar"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/AddOutlet"
                android:rowCount="4"
                android:columnCount="2"
                android:layout_margin="@dimen/material_item_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@color/grey_700"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="@dimen/detailfont_size"
                android:text="Outlet Name"
                android:id="@+id/textView" />
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="@dimen/detailfont_size"
                android:textColor="@color/grey_500"
                android:id="@+id/outlet_Name"        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/grey_700"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="@dimen/detailfont_size"
                android:text="City"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="@dimen/detailfont_size"
                android:textColor="@color/grey_500"
                android:id="@+id/city"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="@color/grey_700"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="@dimen/detailfont_size"
                android:text="Channel Type"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="14sp"
                android:textColor="@color/grey_500"
                android:id="@+id/spinner">

            </Spinner>
            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="@color/grey_700"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="@dimen/detailfont_size"
                android:text="Date"
                />
            <EditText
                android:id="@+id/etDate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:textColor="@color/grey_700"
                android:layout_margin="@dimen/material_item_margin"
                android:textSize="@dimen/detailfont_size"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:inputType="date"
                />
            </GridLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/navDrawerFrame"
            android:name="com.euromonitor.storecheck.app.StoreCheckNavigationFragment"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/storecheck_navigation_drawer"
            tools:layout="@layout/storecheck_navigation_drawer"
            />
    </android.support.v4.widget.DrawerLayout>
</layout>