<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.euromonitor.Storechecker">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <activity
            android:name="com.euromonitor.Storechecker.app.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.euromonitor.Storechecker.app.AndroidDatabaseManager"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name="com.euromonitor.Storechecker.app.StoreCheckAddBrandActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.euromonitor.Storechecker.app.StoreCheckAddProductDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.euromonitor.Storechecker.app.StoreCheckImportActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.euromonitor.Storechecker.app.StoreCheckExportActivity"  android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.euromonitor.Storechecker.app.StoreCheckDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.euromonitor.Storechecker.app.OutletDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.euromonitor.Storechecker.app.AddOutletActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="4b345bd310a45cfb27c568757996a5392a62d50c" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
